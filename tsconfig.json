{
    "compilerOptions": {
      "target": "es6",
      "typeRoots": [
        "./node_modules/@types",
        "./src/types",
      ],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "outDir": "./dist",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "declaration": true,
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules",
    ],
    "ts-node": {
      "transpileOnly": true,
      "compilerOptions": {
        "sourceMap": true
      }
    }
  }